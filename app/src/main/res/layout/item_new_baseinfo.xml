<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingTop="10dp"
    android:paddingLeft="12.5dp"
    android:paddingRight="12.5dp"
    android:background="@color/colorThemeBg">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Name"
        android:id="@+id/tv_name1"
        android:textSize="15sp"
        android:textColor="@color/colorWhite"/>

    <RelativeLayout
        android:id="@+id/ll_person_information"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="10dp"
        android:background="@color/colorThemeBg">
        <EditText
            android:id="@+id/ed_email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginRight="20dp"
            android:layout_toLeftOf="@id/iv_arrow_2"
            android:hint="enter your information"
            android:background="@null"
            android:gravity="left"
            android:textColorHint="@color/color8C8"
            android:textColor="@color/colorWhite"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/tv_email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginRight="20dp"
            android:layout_toLeftOf="@id/iv_arrow_2"
            android:background="@null"
            android:gravity="left"
            android:textColorHint="@color/color8C8"
            android:textColor="@color/colorWhite"
            android:textSize="14sp" />
        <ImageView
            android:id="@+id/iv_arrow_2"
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:src="@drawable/ic_arrow_right" />

        <View
            android:id="@+id/view1"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_alignParentBottom="true"
            android:background="@drawable/ic_me_line" />
    </RelativeLayout>



</LinearLayout>