<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/titleRelative"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_marginTop="30dp">

        <ImageView
            android:id="@+id/iv_back"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_alignParentLeft="true"
            android:layout_centerInParent="true"
            android:layout_marginLeft="15dp"
            android:src="@drawable/ic_arrow_left" />

        <TextView
            android:id="@+id/tv_titles"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:textColor="@color/colorBlack"
            android:textSize="18.0sp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_alignParentBottom="true" />
    </RelativeLayout>

    <View
        android:id="@+id/view_auth"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/titleRelative"
        android:background="@color/colorGray"
        android:visibility="invisible" />

    <com.classic.common.MultipleStatusView xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/msv_status"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/titleRelative"
        app:loadingView="@layout/custom_loading_view">


        <TextView
            android:id="@+id/tv_text4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:textColor="@color/colorGray"
            android:textSize="12sp" />

        <RelativeLayout
            android:id="@+id/ll_em_type"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_below="@id/tv_text4"
            android:layout_marginTop="20dp"
            android:background="@color/colorWhite"
            android:paddingRight="15dp">

            <TextView
                android:id="@+id/tv_name1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="20dp"
                android:text="Employment Type"
                android:textColor="@color/colorGray"
                android:textSize="16sp" />

            <ImageView
                android:id="@+id/iv_arrow_1"
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:src="@drawable/ic_arrow_right" />

            <TextView
                android:id="@+id/tv_emp_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginRight="20dp"
                android:layout_toLeftOf="@id/iv_arrow_1"
                android:background="@null"
                android:gravity="right"
                android:textColor="@color/colorBlack"
                android:textSize="14sp" />

            <View
                android:id="@+id/view1"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_alignParentBottom="true"
                android:background="#f5f5f5" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/ll_uncome"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_below="@id/ll_em_type"
            android:layout_marginTop="20dp"
            android:background="@color/colorWhite"
            android:paddingRight="15dp">

            <TextView
                android:id="@+id/tv_name2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="20dp"
                android:text="Income Monthly"
                android:textColor="@color/colorGray"
                android:textSize="16sp" />

            <ImageView
                android:id="@+id/iv_arrow_2"
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:src="@drawable/ic_arrow_right" />

            <TextView
                android:id="@+id/tv_income"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginRight="20dp"
                android:layout_toLeftOf="@id/iv_arrow_2"
                android:background="@null"
                android:gravity="right"
                android:textColor="@color/colorBlack"
                android:textSize="14sp" />

            <View
                android:id="@+id/view2"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_alignParentBottom="true"
                android:background="#f5f5f5" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/ll_working"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_below="@id/ll_uncome"
            android:layout_marginTop="20dp"
            android:background="@color/colorWhite"
            android:paddingRight="15dp">

            <TextView
                android:id="@+id/tv_name3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="20dp"
                android:text="Working since"
                android:textColor="@color/colorGray"
                android:textSize="16sp" />

            <ImageView
                android:id="@+id/iv_arrow_3"
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:src="@drawable/ic_arrow_right" />

            <TextView
                android:id="@+id/working_since"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginRight="20dp"
                android:layout_toLeftOf="@id/iv_arrow_3"
                android:background="@null"
                android:gravity="right"
                android:textColor="@color/colorBlack"
                android:textSize="14sp" />

            <View
                android:id="@+id/view3"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_alignParentBottom="true"
                android:background="#f5f5f5" />
        </RelativeLayout>

        <!--    <androidx.recyclerview.widget.RecyclerView-->
        <!--        android:id="@+id/rc_auth"-->
        <!--        android:layout_width="match_parent"-->
        <!--        android:layout_height="wrap_content"-->
        <!--        android:layout_below="@+id/tv_text4"-->
        <!--        android:overScrollMode="never" />-->

        <TextView
            android:id="@+id/tv_text4_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/tv_sumbit"
            android:layout_marginBottom="20dp"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:textColor="@color/colorGray"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/tv_sumbit"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="50dp"
            android:layout_marginRight="50dp"
            android:layout_marginBottom="20dp"
            android:background="@drawable/shape_theme_25"
            android:gravity="center"
            android:text="Submit"
            android:textColor="@color/colorWhite"
            android:textSize="18sp" />

    </com.classic.common.MultipleStatusView>

</RelativeLayout>