<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="-30dp"
        android:background="@color/colorThemeBg">

        <RelativeLayout
            android:id="@+id/titleRelative"
            android:layout_width="match_parent"
            android:layout_marginTop="20dp"
            android:layout_height="65dp">
            <ImageView
                android:id="@+id/iv_back"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_alignParentLeft="true"
                android:layout_centerInParent="true"
                android:layout_marginLeft="15dp"
                android:src="@drawable/ic_arrow_left" />

            <TextView
                android:id="@+id/tv_titles"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_centerHorizontal="true"
                android:text="Approval"
                android:textColor="@color/colorWhite"
                android:textSize="18.0sp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_alignParentBottom="true" />
        </RelativeLayout>

        <TextView
            android:id="@+id/tv_text5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/titleRelative"
            android:layout_gravity="center"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="5dp"
            android:layout_marginRight="15dp"
            android:text=""
            android:textColor="@color/colorWhite"
            android:textSize="15sp" />

        <View
            android:id="@+id/view_auth"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@+id/titleRelative"
            android:background="@color/colorGray"
            android:visibility="invisible" />
        
        <pl.droidsonroids.gif.GifImageView
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/auth"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="40dp"
            android:layout_marginBottom="50dp"
            android:layout_marginTop="100dp" />
        <ImageView
            android:id="@+id/iv_rs"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_rs"
            android:layout_marginTop="240dp"/>
        <ImageView
            android:id="@+id/iv_line_bg"
            android:layout_width="match_parent"
            android:layout_marginTop="50dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:src="@drawable/ic_loading_box"
            android:layout_height="30dp"
            android:layout_below="@+id/iv_rs"/>

        <ImageView
            android:id="@+id/iv_auth"
            android:layout_centerHorizontal="true"
            android:layout_width="120dp"
            android:layout_marginTop="50dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:src="@drawable/ic_loading_line"
            android:layout_height="30dp"
            android:layout_below="@+id/iv_rs"/>

    </RelativeLayout>

</RelativeLayout>