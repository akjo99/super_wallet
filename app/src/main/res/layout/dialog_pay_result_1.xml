<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="400dp"
    android:orientation="vertical"
    android:layout_gravity="center"
    android:gravity="center_horizontal">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/dialog_failed" />

    <TextView
        android:id="@+id/tv_pay_result"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Payment failed"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="175dp"
        android:visibility="invisible"
        android:textSize="18sp"
        android:textColor="@color/colorBlack"/>

    <TextView
        android:id="@+id/text1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="70dp"
        android:layout_marginRight="70dp"
        android:lineSpacingExtra="5dp"
        android:layout_below="@id/tv_pay_result"
        android:text="Sorry, pay interest fail, you lose
chance to loan,please try again."
        android:textSize="12sp"
        android:textColor="@color/colorBlack"
        android:layout_marginTop="0dp" />

    <TextView
        android:id="@+id/tv_sumbit"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@id/text1"
        android:layout_marginLeft="80dp"
        android:layout_marginTop="20dp"
        android:layout_marginRight="80dp"
        android:layout_marginBottom="20dp"
        android:background="@drawable/shape_theme_25"
        android:gravity="center"
        android:text="Try Again"
        android:textColor="@color/colorBlack"
        android:textSize="20sp" />

</RelativeLayout>